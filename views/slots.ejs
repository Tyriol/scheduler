<%- include('partials/header') %>

    <main>
        <div class="ui container">
            <h1 class="ui center aligned block header">Booked Slots</h1>
            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>Duration</th>
                        <th></th>
                    </tr>
                </thead>
                <% slots.forEach((slot) => { %>
                <tr>
                    <td><%= slot.name %></td>
                    <td><%= slot.date.toDateString() %></td>
                    <td><%=slot.date.toISOString().slice(11,16)%></td>
                    <td><%= slot.duration %> min</td>
                    <td class="thin"><a class="ui basic blue button" href="/slots/<%=slot._id%>">Manage  <i class="angle double right icon"></i></a></td>
                </tr>
                <% }); %>
            </table>
    
            <button id="home" class="ui button"><a href="/">Home</a></button>
            <button class="ui button"> <a href="/book">Book a slot</a></button>   
        </div>
    </main>

<%- include('partials/footer') %>